---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("posts")).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);
---

<Layout
  title="News - Olimpiade degli Artisti"
  description="Leggi gli ultimi articoli e aggiornamenti da Olimpiade degli Artisti"
>
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <h1 class="text-5xl font-serif font-bold text-gray-900 mb-12">
      News e Articoli
    </h1>

    <div class="space-y-12">
      {
        posts.length > 0 ? (
          posts.map((post) => (
            <article class="border-b border-gray-200 pb-12">
              <div class="mb-4">
                <span class="text-sm text-gray-600">
                  {post.data.date.toLocaleDateString("it-IT", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </span>
                {post.data.author && (
                  <span class="text-sm text-gray-600 ml-4">
                    di {post.data.author}
                  </span>
                )}
              </div>
              <h2 class="text-3xl font-serif font-bold text-gray-900 mb-4">
                {post.data.title}
              </h2>
              {post.data.description && (
                <p class="text-lg text-gray-700 mb-4">
                  {post.data.description}
                </p>
              )}
              <a
                href={`${import.meta.env.BASE_URL}/news/${post.slug}`}
                class="text-gray-900 font-semibold hover:text-gray-700 transition"
              >
                Leggi di più →
              </a>
            </article>
          ))
        ) : (
          <div class="text-center py-12">
            <p class="text-xl text-gray-600">
              Nessun articolo disponibile al momento.
            </p>
          </div>
        )
      }
    </div>
  </section>
</Layout>
