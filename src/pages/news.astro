---
import Layout from "../layouts/Layout.astro";
---

<Layout title="News">
    <section class="py-32 bg-white">
        <div class="max-w-4xl mx-auto px-4">
            <div class="text-center mb-24">
                <span
                    class="text-gold-600 font-bold uppercase tracking-[0.4em] text-xs block mb-4"
                    >Latest Updates</span
                >
                <h1
                    class="text-4xl md:text-6xl font-serif font-bold text-deepviolet-950 uppercase mb-6"
                >
                    Archivio <span class="text-gold-600">News</span>
                </h1>
                <div class="w-16 h-1 bg-gold-500 mx-auto"></div>
            </div>

            <div class="space-y-12">
                <div class="museum-block p-10">
                    <span
                        class="text-xs text-gray-400 font-bold uppercase tracking-widest mb-2 block"
                        >01 Gennaio 2026</span
                    >
                    <h2
                        class="text-2xl font-serif font-bold text-deepviolet-950 uppercase mb-4"
                    >
                        Lancio della Nuova Piattaforma
                    </h2>
                    <p class="text-gray-600 text-sm leading-relaxed mb-6">
                        Inizia ufficialmente la fase di raccolta delle tesi di
                        laurea e delle opere degli esordienti per la collezione
                        2026.
                    </p>
                    <div class="w-12 h-[1px] bg-gold-400"></div>
                </div>

                <div class="museum-block p-10">
                    <span
                        class="text-xs text-gray-400 font-bold uppercase tracking-widest mb-2 block"
                        >15 Dicembre 2025</span
                    >
                    <h2
                        class="text-2xl font-serif font-bold text-deepviolet-950 uppercase mb-4"
                    >
                        Protocollo di Tutela Artisti
                    </h2>
                    <p class="text-gray-600 text-sm leading-relaxed mb-6">
                        Aggiornato lo statuto per garantire la massima
                        protezione dei diritti d'autore in ambito digitale.
                    </p>
                    <div class="w-12 h-[1px] bg-gold-400"></div>
                </div>
            </div>
        </div>
    </section>
</Layout>
