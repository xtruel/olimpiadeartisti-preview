---
import Layout from '../layouts/Layout.astro';
import ArtistCard from '../components/ArtistCard.astro';
import { getCollection } from 'astro:content';

// Carica tutti gli artisti dalla collection
const allArtists = await getCollection('artists');

// Estrai categorie uniche
const categories = ['Tutti', ...new Set(allArtists.map(a => a.data.category))].sort();

// Prepara dati artisti
const artists = allArtists.map(artist => ({
  name: artist.data.name,
  category: artist.data.category,
  city: artist.data.city,
  image: artist.data.image,
  slug: artist.slug
}));
---

<Layout title="Artisti - Olimpiade degli Artisti" description="Scopri i talenti artistici della comunitÃ  Olimpiade degli Artisti">
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <h1 class="text-5xl font-serif font-bold text-gray-900 mb-12">Scopri gli Artisti</h1>
    
    <!-- Filtri -->
    <div class="mb-12">
      <div class="flex flex-wrap gap-3">
        {categories.map(cat => (
          <button 
            class={`px-4 py-2 rounded-full font-semibold transition ${
              cat === 'Tutti' 
                ? 'bg-gray-900 text-white' 
                : 'bg-gray-200 text-gray-900 hover:bg-gray-300'
            }`}
            data-filter={cat}
            data-category={cat}
          >
            {cat}
          </button>
        ))}
      </div>
    </div>

    <!-- Gallery -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="artists-grid">
      {artists.length > 0 ? (
        artists.map(artist => (
          <div class="artist-card" data-category={artist.category}>
            <ArtistCard 
              name={artist.name}
              category={artist.category}
              image={artist.image}
              slug={artist.slug}
            />
          </div>
        ))
      ) : (
        <div class="col-span-full text-center py-12">
          <p class="text-xl text-gray-600">Presto nuovi artisti in arrivo...</p>
        </div>
      )}
    </div>
  </section>
</Layout>

<script>
  // Filtri lato client
  const filterButtons = document.querySelectorAll('[data-filter]');
  const artistCards = document.querySelectorAll('.artist-card');

  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const selectedCategory = button.getAttribute('data-category');
      
      // Aggiorna stile bottoni
      filterButtons.forEach(b => {
        b.classList.remove('bg-gray-900', 'text-white');
        b.classList.add('bg-gray-200', 'text-gray-900');
      });
      button.classList.remove('bg-gray-200', 'text-gray-900');
      button.classList.add('bg-gray-900', 'text-white');
      
      // Filtra card
      artistCards.forEach(card => {
        const cardCategory = card.getAttribute('data-category');
        if (selectedCategory === 'Tutti' || cardCategory === selectedCategory) {
          card.style.display = 'block';
          card.classList.add('animate-fade-in');
        } else {
          card.style.display = 'none';
        }
      });
    });
  });
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  .animate-fade-in {
    animation: fadeIn 0.3s ease-in;
  }
</style>
