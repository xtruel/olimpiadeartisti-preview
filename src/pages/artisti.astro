---
import Layout from '../layouts/Layout.astro';
import ArtistCard from '../components/ArtistCard.astro';

// Importa i dati degli artisti (per ora vuoto, sar√† popolato con file Markdown)
const artists = [
  {
    name: 'Giuseppe Macchione',
    category: 'Pittura',
    image: '/olimpiadeartisti-preview/placeholder.jpg',
    slug: 'giuseppe-macchione'
  }
];

const categories = ['Tutti', 'Pittura', 'Scultura', 'Fotografia', 'Design', 'Illustrazione', 'Grafica', 'Ceramica', 'Tessile', 'Video'];
---

<Layout title="Artisti - Olimpiade degli Artisti">
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <h1 class="text-5xl font-serif font-bold text-gray-900 mb-12">Scopri gli Artisti</h1>
    
    <!-- Filtri -->
    <div class="mb-12">
      <div class="flex flex-wrap gap-3">
        {categories.map(cat => (
          <button 
            class={`px-4 py-2 rounded-full font-semibold transition ${
              cat === 'Tutti' 
                ? 'bg-gray-900 text-white' 
                : 'bg-gray-200 text-gray-900 hover:bg-gray-300'
            }`}
            data-filter={cat}
          >
            {cat}
          </button>
        ))}
      </div>
    </div>

    <!-- Gallery -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {artists.length > 0 ? (
        artists.map(artist => (
          <ArtistCard 
            name={artist.name}
            category={artist.category}
            image={artist.image}
            slug={artist.slug}
          />
        ))
      ) : (
        <div class="col-span-full text-center py-12">
          <p class="text-xl text-gray-600">Presto nuovi artisti in arrivo...</p>
        </div>
      )}
    </div>
  </section>
</Layout>

<script>
  // Filtri lato client (da implementare)
  const filterButtons = document.querySelectorAll('[data-filter]');
  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      filterButtons.forEach(b => b.classList.remove('bg-gray-900', 'text-white'));
      filterButtons.forEach(b => b.classList.add('bg-gray-200', 'text-gray-900'));
      button.classList.remove('bg-gray-200', 'text-gray-900');
      button.classList.add('bg-gray-900', 'text-white');
    });
  });
</script>
