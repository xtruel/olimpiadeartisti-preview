---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contatti - Olimpiade degli Artisti">
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <h1 class="text-5xl font-serif font-bold text-gray-900 mb-12">Contatti</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <!-- Informazioni -->
      <div>
        <h2 class="text-2xl font-serif font-bold text-gray-900 mb-6">Informazioni</h2>
        <div class="space-y-6">
          <div>
            <h3 class="font-semibold text-gray-900 mb-2">Email</h3>
            <a href="mailto:info@olimpiadeartisti.net" class="text-gray-700 hover:text-gray-900 transition">
              info@olimpiadeartisti.net
            </a>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-2">Telefono</h3>
            <a href="tel:+393388103984" class="text-gray-700 hover:text-gray-900 transition">
              +39 338 810 39 84
            </a>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-2">Social</h3>
            <div class="space-y-2">
              <a href="#" class="block text-gray-700 hover:text-gray-900 transition">Instagram</a>
              <a href="#" class="block text-gray-700 hover:text-gray-900 transition">Facebook</a>
              <a href="#" class="block text-gray-700 hover:text-gray-900 transition">LinkedIn</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Form -->
      <div>
        <h2 class="text-2xl font-serif font-bold text-gray-900 mb-6">Inviaci un Messaggio</h2>
        <form class="space-y-4">
          <div>
            <label for="name" class="block text-sm font-semibold text-gray-900 mb-2">Nome</label>
            <input type="text" id="name" name="name" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900" required />
          </div>
          <div>
            <label for="email" class="block text-sm font-semibold text-gray-900 mb-2">Email</label>
            <input type="email" id="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900" required />
          </div>
          <div>
            <label for="message" class="block text-sm font-semibold text-gray-900 mb-2">Messaggio</label>
            <textarea id="message" name="message" rows="5" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900" required></textarea>
          </div>
          <button type="submit" class="w-full bg-gray-900 text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-800 transition">
            Invia
          </button>
        </form>
      </div>
    </div>
  </section>
</Layout>
