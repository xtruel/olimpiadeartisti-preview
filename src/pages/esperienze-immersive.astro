---
import Layout from "../layouts/Layout.astro";
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<Layout title="Esperienze Immersive">
    <section
        class="py-32 bg-black text-white relative min-h-screen flex flex-col justify-center"
    >
        <!-- Star Layout simulation -->
        <div
            class="absolute inset-0 z-0 overflow-hidden pointer-events-none opacity-40"
        >
            <div
                class="absolute top-[10%] left-[20%] w-1 h-1 bg-white rounded-full animate-pulse"
            >
            </div>
            <div
                class="absolute top-[40%] left-[80%] w-1 h-1 bg-white rounded-full animate-pulse delay-700"
            >
            </div>
            <div
                class="absolute top-[70%] left-[10%] w-1 h-1 bg-white rounded-full animate-pulse delay-1000"
            >
            </div>
            <div
                class="absolute top-[30%] left-[50%] w-1 h-1 bg-white rounded-full animate-pulse delay-500"
            >
            </div>
        </div>

        <div class="max-w-7xl mx-auto px-4 relative z-10 text-center">
            <div class="mb-16">
                <span
                    class="text-gold-500 font-bold uppercase tracking-[0.4em] text-xs block mb-4"
                    >Virtual Experience</span
                >
                <h1
                    class="text-4xl md:text-7xl font-serif font-bold uppercase mb-6 italic tracking-tighter"
                >
                    Oltre la <span class="text-gold-500">Realtà</span>
                </h1>
                <p class="text-violet-200/40 max-w-2xl mx-auto text-sm">
                    Immagina di passeggiare tra le opere del mondo, senza
                    muoverti da casa. La nostra visione del futuro dell'arte è
                    immersiva.
                </p>
            </div>

            <!-- Virtual Gallery Demo -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-24">
                {
                    [
                        {
                            id: 1,
                            img: "https://images.unsplash.com/photo-1544273677-c433136021d4?q=80&w=600",
                        },
                        {
                            id: 2,
                            img: "https://images.unsplash.com/photo-1574914629385-46448b767aec?q=80&w=600",
                        },
                        {
                            id: 3,
                            img: "https://images.unsplash.com/photo-1582555172866-f73bb12a2ab3?q=80&w=600",
                        },
                        {
                            id: 4,
                            img: "https://images.unsplash.com/photo-1518998053574-53ee753fe1d0?q=80&w=600",
                        },
                        {
                            id: 5,
                            img: "https://images.unsplash.com/photo-1563089145-599997674d42?q=80&w=600",
                        },
                        {
                            id: 6,
                            img: "https://images.unsplash.com/photo-1571115764595-644a1f56a55c?q=80&w=600",
                        },
                    ].map((item) => (
                        <div
                            class="group relative aspect-[4/5] overflow-hidden border border-white/10 bg-white/5 cursor-pointer"
                            onclick="openGallery(this)"
                        >
                            <img
                                src={item.img}
                                alt=""
                                class="w-full h-full object-cover grayscale group-hover:grayscale-0 group-hover:scale-110 transition-all duration-700 opacity-60 group-hover:opacity-100"
                            />
                            <div class="absolute inset-x-4 bottom-4 p-4 bg-black/80 backdrop-blur-md opacity-0 group-hover:opacity-100 translate-y-4 group-hover:translate-y-0 transition-all duration-500">
                                <span class="text-[10px] uppercase font-bold text-gold-500 tracking-widest">
                                    VR Preview
                                </span>
                                <h4 class="text-xs font-bold uppercase mt-1">
                                    Stanza Virtuale {item.id}
                                </h4>
                            </div>
                        </div>
                    ))
                }
            </div>

            <div class="flex flex-col items-center gap-8">
                <div
                    class="p-8 border-2 border-dashed border-white/20 inline-block text-center"
                >
                    <h3
                        class="font-serif font-bold text-xl uppercase mb-4 text-gold-500"
                    >
                        Roadmap AR / VR
                    </h3>
                    <p
                        class="text-xs text-white/40 leading-relaxed uppercase tracking-widest mb-6"
                    >
                        In integrazione con visori Meta Quest and Apple Vision
                        Pro
                    </p>
                    <div class="flex flex-wrap justify-center gap-4">
                        <span
                            class="px-4 py-2 bg-white/5 text-[9px] font-bold uppercase tracking-widest"
                            >Modellazione 3D</span
                        >
                        <span
                            class="px-4 py-2 bg-white/5 text-[9px] font-bold uppercase tracking-widest"
                            >Spazi Metaversali</span
                        >
                        <span
                            class="px-4 py-2 bg-white/5 text-[9px] font-bold uppercase tracking-widest"
                            >NFT Validation</span
                        >
                    </div>
                </div>
                <a
                    href={`${baseUrl}/tecnologie`}
                    class="text-gold-500 text-xs font-bold uppercase tracking-[0.3em] hover:text-white transition-all underline underline-offset-8"
                    >Torna a Tecnologie</a
                >
            </div>
        </div>
    </section>

    <!-- Simple Lightbox Simulation -->
    <div
        id="vr-lightbox"
        class="fixed inset-0 z-[1000] bg-black/95 flex items-center justify-center p-8 hidden opacity-0 transition-opacity duration-300"
    >
        <button
            onclick="closeGallery()"
            class="absolute top-8 right-8 text-white font-bold uppercase tracking-widest text-[10px] hover:text-gold-500"
            >Chiudi [X]</button
        >
        <div
            class="max-w-5xl w-full h-[80vh] bg-white/5 p-4 relative flex items-center justify-center"
        >
            <div
                class="absolute inset-0 flex items-center justify-center text-white/5 font-serif text-9xl pointer-events-none select-none"
            >
                MUSEUM 3D
            </div>
            <img
                id="lightbox-img"
                src=""
                class="max-w-full max-h-full object-contain relative z-10"
            />
        </div>
        <div class="absolute bottom-8 text-center">
            <p
                class="text-gold-500 text-[10px] font-bold uppercase tracking-[0.4em]"
            >
                Rendering Immersivo Simulato
            </p>
        </div>
    </div>

    <script is:inline>
        window.openGallery = (el) => {
            const img = el.querySelector("img").src;
            const lb = document.getElementById("vr-lightbox");
            const lbImg = document.getElementById("lightbox-img");
            lbImg.src = img;
            lb.classList.remove("hidden");
            setTimeout(() => lb.classList.add("opacity-100"), 10);
        };
        window.closeGallery = () => {
            const lb = document.getElementById("vr-lightbox");
            lb.classList.remove("opacity-100");
            setTimeout(() => lb.classList.add("hidden"), 300);
        };
    </script>
</Layout>
