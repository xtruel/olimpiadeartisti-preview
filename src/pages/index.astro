---
import Layout from "../layouts/Layout.astro";

const title = "Olimpiade degli Artisti | Talenti Creativi ed Eccellenze";
const description =
  "Una piattaforma curatoriale per valorizzare opere creative, talenti ed eccellenze.";
const baseUrl = import.meta.env.BASE_URL;
---

<Layout title={title} description={description}>
  <!-- Hero Section Platinum -->
  <section
    class="relative min-h-[90vh] md:min-h-screen flex items-center justify-center overflow-hidden bg-deepviolet-950 px-4"
  >
    <!-- Sophisticated Background Layered -->
    <div class="absolute inset-0 z-0">
      <div
        class="absolute inset-0 bg-gradient-to-b from-deepviolet-950 via-deepviolet-900/60 to-deepviolet-950 z-10"
      >
      </div>

      <!-- Base Pattern -->
      <img
        src={`${baseUrl}/hero_purple.svg`}
        alt=""
        class="absolute inset-0 w-full h-full object-cover opacity-20 scale-110 animate-slow-zoom"
      />

      <!-- Floating Institutional Symbols -->
      <div
        class="absolute top-1/4 left-1/10 w-32 h-32 md:w-64 md:h-64 opacity-10 animate-pulse"
      >
        <img
          src={`${baseUrl}/greece_purple.svg`}
          alt=""
          class="w-full h-full object-contain rotate-12"
        />
      </div>
      <div
        class="absolute bottom-1/4 right-1/10 w-48 h-48 md:w-80 md:h-80 opacity-5 animate-pulse delay-700"
      >
        <img
          src={`${baseUrl}/vision_purple.svg`}
          alt=""
          class="w-full h-full object-contain -rotate-12"
        />
      </div>

      <div class="absolute inset-0 hero-overlay opacity-70"></div>
    </div>

    <div class="relative z-20 max-w-6xl mx-auto text-center py-20 px-2 lg:px-0">
      <div class="inline-block mb-6 md:mb-10 animate-fade-in-up">
        <span
          class="block text-gold-400 font-sans text-[10px] md:text-sm tracking-[0.5em] md:tracking-[0.8em] uppercase mb-4 opacity-80"
        >
          International Cultural Project
        </span>
        <h1
          class="text-4xl md:text-8xl lg:text-9xl font-serif font-bold text-white tracking-tight md:tracking-tighter mb-6 drop-shadow-2xl leading-[1.1] md:leading-[0.9]"
        >
          OLIMPIADE <br class="hidden md:block" />
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-gold-200 via-gold-500 to-gold-200"
            >DEGLI ARTISTI</span
          >
        </h1>
        <div class="flex items-center justify-center space-x-3 md:space-x-4">
          <div
            class="h-[1px] w-8 md:w-24 bg-gradient-to-r from-transparent to-gold-500"
          >
          </div>
          <div class="w-2 h-2 md:w-3 md:h-3 rotate-45 border border-gold-500">
          </div>
          <div
            class="h-[1px] w-8 md:w-24 bg-gradient-to-l from-transparent to-gold-500"
          >
          </div>
        </div>
      </div>

      <p
        class="text-lg md:text-2xl font-serif text-violet-100/90 mb-8 md:mb-12 tracking-wide max-w-3xl mx-auto leading-relaxed animate-fade-in-up delay-200 px-4"
      >
        Celebriamo l'eccellenza attraverso i valori della <br
          class="hidden sm:block"
        />
        <span
          class="text-gold-300 font-semibold underline decoration-gold-500/30 underline-offset-8"
          >Pace, Bellezza e Volontà Popolare.</span
        >
      </p>

      <div class="mb-10 md:mb-16 animate-fade-in-up delay-300">
        <span
          class="text-[10px] md:text-base font-sans font-light uppercase tracking-[0.3em] md:tracking-[0.4em] inline-block px-4 md:px-8 py-2 md:py-3 border-y border-gold-500/30 text-gold-200 backdrop-blur-sm"
        >
          Premio <span class="at-symbol text-gold-500 font-bold">@</span> OSC<span
            class="at-symbol text-gold-500 font-bold">@</span
          >R <span class="at-symbol text-gold-500 font-bold">@</span> ARTISTI – REFERENDUM
          ONLINE
        </span>
      </div>

      <div
        class="flex flex-col sm:flex-row items-center justify-center gap-4 md:gap-8 animate-fade-in-up delay-300"
      >
        <a
          href={`${baseUrl}/artisti`}
          class="group relative w-full sm:w-auto px-10 py-4 bg-gold-500 text-deepviolet-950 font-bold uppercase tracking-widest overflow-hidden transition-all duration-500 hover:shadow-[0_0_40px_rgba(245,158,11,0.5)] active:scale-95"
        >
          <span class="relative z-10 flex items-center justify-center">
            Esplora le Opere
            <svg
              class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </span>
          <div
            class="absolute inset-0 bg-white translate-y-full group-hover:translate-y-0 transition-transform duration-500"
          >
          </div>
        </a>
        <a
          href={`${baseUrl}/contatti`}
          class="group w-full sm:w-auto px-10 py-4 border border-white/30 text-white font-bold uppercase tracking-widest backdrop-blur-md hover:bg-white hover:text-deepviolet-950 transition-all duration-500 active:scale-95"
        >
          Candidati Ora
        </a>
      </div>
    </div>

    <!-- Decorative bottom fade -->
    <div
      class="absolute bottom-0 left-0 w-full h-24 md:h-48 bg-gradient-to-t from-white to-transparent z-30"
    >
    </div>
  </section>

  <!-- Manifesto Platinum -->
  <section class="py-32 bg-white relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-24 items-center">
        <div class="relative group">
          <div
            class="absolute -inset-4 bg-gold-100/50 rounded-lg -z-10 group-hover:scale-105 transition-transform duration-700"
          >
          </div>
          <img
            src={`${baseUrl}/peace.svg`}
            alt="Pace e Cultura"
            class="w-full shadow-2xl grayscale hover:grayscale-0 transition-all duration-1000"
          />
          <div
            class="absolute -bottom-8 -right-8 w-48 h-48 border-b-2 border-r-2 border-gold-400 -z-10 hidden lg:block"
          >
          </div>
        </div>

        <div class="space-y-10">
          <div class="inline-block border-l-4 border-gold-500 pl-6">
            <span
              class="text-violet-600 font-bold uppercase tracking-widest text-xs mb-2 block"
              >Il Nostro Valore</span
            >
            <h2
              class="text-4xl md:text-6xl font-serif font-bold text-deepviolet-950 uppercase leading-none"
            >
              Manifesto <br />
              <span class="text-gold-600">Universale</span>
            </h2>
          </div>
          <div
            class="space-y-6 text-lg text-gray-700 leading-relaxed font-light"
          >
            <p>
              Ispirato ai Giochi Olimpici dell'antica Grecia, questo progetto
              nasce per celebrare l'eccellenza artistica attraverso i valori
              universali della <strong>Pace</strong>, della <strong
                >Bellezza</strong
              > e della <strong>Democrazia</strong>.
            </p>
            <p>
              Una piattaforma dove il talento non è solo osservato, ma
              partecipato dalla collettività, creando un ponte tra l'eredità
              classica e l'innovazione contemporanea.
            </p>
          </div>
          <a
            href={`${baseUrl}/progetto`}
            class="inline-flex items-center text-deepviolet-900 font-bold uppercase tracking-widest text-sm hover:text-gold-600 transition-colors group"
          >
            Approfondisci il Manifesto
            <div
              class="ml-3 w-10 h-[1px] bg-gold-500 group-hover:w-16 transition-all duration-500"
            >
            </div>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Digital Gallery Highlights -->
  <section class="py-32 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div
        class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6"
      >
        <div class="space-y-4">
          <span
            class="text-gold-600 font-bold uppercase tracking-widest text-xs"
            >Collezione Curata</span
          >
          <h2
            class="text-4xl md:text-5xl font-serif font-bold text-deepviolet-950 uppercase"
          >
            Highlights <span class="text-gold-500">2026</span>
          </h2>
        </div>
        <a
          href={`${baseUrl}/artisti`}
          class="text-deepviolet-400 hover:text-gold-600 font-bold uppercase tracking-widest text-[10px] border-b border-gold-200 pb-2 transition-all"
        >
          Visualizza tutto l'Archivio
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        {
          [
            { title: "Armonia Classica", cat: "Pittura", delay: "0" },
            { title: "Forma Pura", cat: "Scultura", delay: "100" },
            { title: "Luce Eterna", cat: "Fotografia", delay: "200" },
            { title: "Sogno Digitale", cat: "Digital Art", delay: "300" },
          ].map((item, i) => (
            <div
              class={`group relative aspect-[4/5] overflow-hidden bg-deepviolet-900 animate-fade-in-up delay-[${item.delay}ms]`}
            >
              <div class="absolute inset-0 bg-deepviolet-950/20 group-hover:bg-transparent transition-colors duration-700 z-10" />
              <img
                src={`${baseUrl}/hero_purple.svg`}
                alt={item.title}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-1000 opacity-60 group-hover:opacity-100"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-deepviolet-950 via-transparent to-transparent opacity-80 z-20" />
              <div class="absolute bottom-0 left-0 p-8 z-30 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
                <span class="text-[9px] font-bold text-gold-400 uppercase tracking-widest mb-2 block">
                  {item.cat}
                </span>
                <h3 class="text-xl font-serif text-white uppercase tracking-tight">
                  {item.title}
                </h3>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Categories Section -->

  <section class="py-32 bg-deepviolet-950 relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <img
        src={`${baseUrl}/greece_purple.svg`}
        alt="Classic Pattern"
        class="w-full h-full object-cover scale-150 rotate-3"
      />
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4">
      <div class="text-center mb-24">
        <h2 class="text-4xl md:text-6xl font-serif font-bold text-white mb-6">
          DISCIPLINE ARTISTICHE
        </h2>
        <div class="w-24 h-1 bg-gold-500 mx-auto"></div>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
        {
          [
            "Pittura",
            "Scultura",
            "Fotografia",
            "Design",
            "Illustrazione",
            "Grafica",
            "Ceramica",
            "Tessile",
            "Video",
            "Digital Art",
            "Performance",
            "Installazione",
            "Musica",
            "Architettura",
            "Moda",
          ].map((name, i) => (
            <div class="glass-dark p-8 group hover:border-gold-500 transition-all duration-500 cursor-default">
              <span class="block text-gold-500/30 text-4xl font-serif mb-4 group-hover:text-gold-500 transition-colors">
                0{i + 1}
              </span>
              <h3 class="text-white font-serif uppercase tracking-widest text-lg group-hover:translate-x-2 transition-transform duration-500">
                {name}
              </h3>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-32 relative overflow-hidden bg-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2
        class="text-4xl md:text-7xl font-serif font-bold text-deepviolet-950 mb-8 uppercase"
      >
        Porta la tua Arte <br /> nel Futuro
      </h2>
      <p class="text-xl text-gray-600 mb-12 max-w-2xl mx-auto">
        Sottoponi la tua candidatura per far parte della collezione ufficiale e
        partecipare al referendum popolare.
      </p>

      <a
        href={`${baseUrl}/contatti`}
        class="inline-block px-12 py-5 bg-deepviolet-900 text-white font-bold uppercase tracking-widest hover:bg-gold-600 transition-all duration-500 shadow-xl"
      >
        Inizia la Candidatura
      </a>
    </div>
  </section>
</Layout>

<style>
  @keyframes slow-zoom {
    0% {
      transform: scale(1.1);
    }
    100% {
      transform: scale(1.2);
    }
  }

  .animate-slow-zoom {
    animation: slow-zoom 20s ease-in-out infinite alternate;
  }

  .hero-overlay {
    background: radial-gradient(
      circle at center,
      transparent 0%,
      rgba(30, 11, 68, 0.8) 100%
    );
  }
</style>
