---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Genera pagine statiche per ogni artista
export async function getStaticPaths() {
  const artists = await getCollection('artists');
  return artists.map(artist => ({
    params: { slug: artist.slug },
    props: { artist }
  }));
}

const { artist } = Astro.props;
const { Content } = await artist.render();
---

<Layout 
  title={`${artist.data.name} - Olimpiade degli Artisti`}
  description={`Scopri le opere di ${artist.data.name}, artista ${artist.data.category.toLowerCase()}`}
>
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <!-- Breadcrumb -->
    <div class="mb-8">
      <a href="/artisti" class="text-gray-600 hover:text-gray-900 transition">â† Torna agli Artisti</a>
    </div>

    <!-- Header Artista -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-16">
      <!-- Immagine -->
      <div class="md:col-span-1">
        <img 
          src={artist.data.image} 
          alt={artist.data.name}
          class="w-full aspect-square object-cover rounded-lg shadow-lg"
        />
      </div>

      <!-- Info -->
      <div class="md:col-span-2">
        <h1 class="text-5xl font-serif font-bold text-gray-900 mb-4">{artist.data.name}</h1>
        
        <div class="space-y-4 mb-8">
          <div>
            <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide">Categoria</h3>
            <p class="text-lg text-gray-900">{artist.data.category}</p>
          </div>
          
          {artist.data.city && (
            <div>
              <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide">CittÃ </h3>
              <p class="text-lg text-gray-900">{artist.data.city}</p>
            </div>
          )}
          
          {artist.data.techniques && artist.data.techniques.length > 0 && (
            <div>
              <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide">Tecniche</h3>
              <div class="flex flex-wrap gap-2 mt-2">
                {artist.data.techniques.map(tech => (
                  <span class="inline-block bg-gray-200 text-gray-900 px-3 py-1 rounded-full text-sm">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          )}
        </div>

        <!-- Contatti -->
        {(artist.data.email || artist.data.instagram || artist.data.website) && (
          <div class="border-t border-gray-200 pt-8">
            <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide mb-4">Contatti</h3>
            <div class="space-y-2">
              {artist.data.email && (
                <a href={`mailto:${artist.data.email}`} class="block text-gray-900 hover:text-gray-700 transition">
                  ğŸ“§ {artist.data.email}
                </a>
              )}
              {artist.data.instagram && (
                <a href={`https://instagram.com/${artist.data.instagram}`} target="_blank" rel="noopener noreferrer" class="block text-gray-900 hover:text-gray-700 transition">
                  ğŸ“± @{artist.data.instagram}
                </a>
              )}
              {artist.data.website && (
                <a href={artist.data.website} target="_blank" rel="noopener noreferrer" class="block text-gray-900 hover:text-gray-700 transition">
                  ğŸŒ Sito Web
                </a>
              )}
            </div>
          </div>
        )}
      </div>
    </div>

    <!-- Bio -->
    <div class="prose prose-lg max-w-none text-gray-700 mb-16">
      <Content />
    </div>

    <!-- CTA -->
    <div class="bg-gray-50 rounded-lg p-8 text-center">
      <h2 class="text-2xl font-serif font-bold text-gray-900 mb-4">Interessato a questa opera?</h2>
      <p class="text-gray-700 mb-6">Contattaci per scoprire di piÃ¹ o per collaborazioni.</p>
      <a href="/contatti" class="inline-block bg-gray-900 text-white px-8 py-3 rounded-lg font-semibold hover:bg-gray-800 transition">
        Contattaci
      </a>
    </div>
  </section>
</Layout>
