---
interface Props {
  name: string;
  category: string;
  image: string;
  slug: string;
}

const { name, category, image, slug } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<a
  href={`${baseUrl}/artisti/${slug}`}
  class="group block relative bg-deepviolet-950 overflow-hidden border border-white/5 hover:border-gold-500/50 transition-all duration-700"
>
  <div class="aspect-[3/4] overflow-hidden">
    <img
      src={image}
      alt={name}
      class="w-full h-full object-cover opacity-80 group-hover:opacity-100 group-hover:scale-110 transition-all duration-1000"
    />
  </div>

  <!-- Overlay Content -->
  <div
    class="absolute inset-0 bg-gradient-to-t from-deepviolet-950 via-deepviolet-950/20 to-transparent opacity-80 group-hover:opacity-90 transition-opacity"
  >
  </div>

  <div
    class="absolute bottom-0 left-0 w-full p-6 transform translate-y-2 group-hover:translate-y-0 transition-transform duration-500"
  >
    <p
      class="text-[10px] font-bold uppercase tracking-[0.3em] text-gold-400 mb-2"
    >
      {category}
    </p>
    <h3
      class="font-serif text-xl font-bold text-white tracking-tight group-hover:text-gold-200 transition-colors"
    >
      {name}
    </h3>
    <div
      class="w-8 h-[1px] bg-gold-500 mt-4 group-hover:w-full transition-all duration-700"
    >
    </div>
  </div>
</a>
