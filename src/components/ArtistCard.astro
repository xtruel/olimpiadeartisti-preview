---
interface Props {
  name: string;
  category: string;
  image: string;
  slug: string;
}

const { name, category, image, slug } = Astro.props;
---

<a href={`/artisti/${slug}`} class="group block overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-shadow">
  <div class="aspect-square overflow-hidden bg-gray-200">
    <img 
      src={image} 
      alt={name}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
    />
  </div>
  <div class="p-4">
    <h3 class="font-serif text-lg font-bold text-gray-900 group-hover:text-gray-700">{name}</h3>
    <p class="text-sm text-gray-600">{category}</p>
  </div>
</a>
