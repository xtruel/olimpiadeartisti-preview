<nav
  class="sticky top-0 z-[100] bg-white/90 backdrop-blur-xl border-b border-violet-100 shadow-sm"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main Header with Logo -->
    <div class="flex flex-col items-center py-8">
      <a
        href={`${import.meta.env.BASE_URL}/`}
        class="group flex flex-col items-center text-center space-y-2"
      >
        <span
          class="text-[10px] tracking-[0.8em] uppercase text-gold-600 font-bold group-hover:text-gold-400 transition-all duration-700 opacity-80"
        >
          International Cultural Project
        </span>
        <h1
          class="text-3xl md:text-5xl font-serif font-bold text-deepviolet-950 tracking-[0.1em] leading-tight drop-shadow-sm"
        >
          OLIMPIADE <span class="text-gold-600">DEGLI</span> ARTISTI
        </h1>
        <div class="flex items-center space-x-4 w-full">
          <div
            class="h-[1px] flex-1 bg-gradient-to-r from-transparent via-gold-400/50 to-transparent"
          >
          </div>
          <div
            class="w-2 h-2 rotate-45 border border-gold-400 opacity-50 group-hover:rotate-180 transition-transform duration-1000"
          >
          </div>
          <div
            class="h-[1px] flex-1 bg-gradient-to-r from-transparent via-gold-400/50 to-transparent"
          >
          </div>
        </div>
      </a>
    </div>

    <!-- Navigation Menu -->
    <div class="flex justify-center h-16">
      <ul class="flex items-center space-x-8 lg:space-x-16">
        {
          [
            { label: "Home", href: "/" },
            { label: "Il Progetto", href: "/progetto" },
            { label: "Artisti", href: "/artisti" },
            { label: "News", href: "/news" },
            { label: "Contatti", href: "/contatti" },
          ].map((item) => (
            <li>
              <a
                href={`${import.meta.env.BASE_URL}${item.href}`}
                class="text-[11px] font-bold uppercase tracking-[0.25em] text-deepviolet-900 hover:text-gold-600 transition-all duration-300 relative group py-2"
              >
                {item.label}
                <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-0 h-[1.5px] bg-gold-400 group-hover:w-full transition-all duration-500" />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
