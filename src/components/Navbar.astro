<nav
  class="sticky top-0 z-[100] bg-white/90 backdrop-blur-xl border-b border-violet-100 shadow-sm"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main Header with Logo -->
    <div class="flex flex-col items-center py-6 border-b border-violet-50/50">
      <a
        href={`${import.meta.env.BASE_URL}/`}
        class="group flex flex-col items-center text-center space-y-1"
      >
        <span
          class="text-[9px] tracking-[0.6em] uppercase text-violet-400 font-bold group-hover:text-gold-500 transition-all duration-500"
        >
          Progetto Culturale Internazionale
        </span>
        <h1
          class="text-3xl md:text-5xl font-serif font-bold text-deepviolet-950 tracking-tight leading-tight"
        >
          OLIMPIADE DEGLI ARTISTI
        </h1>
        <div
          class="w-24 h-[1px] bg-gold-500 transform scale-x-50 group-hover:scale-x-150 transition-transform duration-700 ease-in-out"
        >
        </div>
      </a>
    </div>

    <!-- Navigation Menu -->
    <div class="flex justify-center h-16">
      <ul class="flex items-center space-x-8 lg:space-x-16">
        {
          [
            { label: "Home", href: "/" },
            { label: "Il Progetto", href: "/progetto" },
            { label: "Artisti", href: "/artisti" },
            { label: "News", href: "/news" },
            { label: "Contatti", href: "/contatti" },
          ].map((item) => (
            <li>
              <a
                href={`${import.meta.env.BASE_URL}${item.href}`}
                class="text-[11px] font-bold uppercase tracking-[0.25em] text-deepviolet-900 hover:text-gold-600 transition-all duration-300 relative group py-2"
              >
                {item.label}
                <span class="absolute bottom-0 left-1/2 -translate-x-1/2 w-0 h-[1.5px] bg-gold-400 group-hover:w-full transition-all duration-500" />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
